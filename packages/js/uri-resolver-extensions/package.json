{
  "name": "@polywrap/uri-resolver-extensions-js",
  "description": "Polywrap URI resolver extensions",
  "version": "0.10.0-pre.13",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/polywrap/monorepo.git"
  },
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "yarn build:fast&& yarn build:wrappers",
    "build:docs": "yarn build:snippets && yarn build:readme",
    "build:fast": "rimraf ./build && tsc --project tsconfig.build.json",
    "lint": "eslint --color -c ../../../.eslintrc.js src/",
    "test": "jest --passWithNoTests --runInBand --verbose",
    "test:ci": "jest --passWithNoTests --runInBand --verbose",
    "test:watch": "jest --watch --passWithNoTests --verbose",
    "build:snippets": "tsc --project ./examples/tsconfig.examples.json",
    "build:readme": "yarn doc-snippets combine",
    "build:wrappers": "yarn build:test-resolver && yarn copy:wrappers && yarn embed:wrappers",
    "copy:wrappers": "yarn copy:test-resolver",
    "embed:wrappers": "ts-node ./scripts/embed-wrappers.ts",
    "build:test-resolver": "yarn --cwd ./src/__tests__/wrappers/test-resolver build",
    "copy:test-resolver": "npx rimraf ./src/__tests__/embeds && mkdir -p ./src/__tests__/embeds/test-resolver/ && npx copyfiles -f ./src/__tests__/wrappers/test-resolver/build/* ./src/__tests__/embeds/test-resolver/"
  },
  "dependencies": {
    "@polywrap/core-js": "0.10.0-pre.13",
    "@polywrap/result": "0.10.0-pre.13",
    "@polywrap/uri-resolvers-js": "0.10.0-pre.13",
    "@polywrap/wasm-js": "0.10.0-pre.13",
    "@polywrap/wrap-manifest-types-js": "0.10.0-pre.13"
  },
  "devDependencies": {
    "@polywrap/core-client-js": "0.10.0-pre.13",
    "base64-to-uint8array": "1.0.0",
    "copyfiles": "2.4.1",
    "@polywrap/plugin-js": "0.10.0-pre.13",
    "@polywrap/test-cases": "0.10.0-pre.13",
    "@types/jest": "26.0.8",
    "doc-snippets": "~1.0.0",
    "jest": "26.6.3",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.4",
    "ts-node": "10.9.1",
    "typescript": "4.9.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "doc-snippets": {
    "extract": {
      "include": [
        "./src/**/*.{ts,tsx,json,yaml,txt,md,graphql,cue}",
        "./examples/**/*.{ts,tsx,json,yaml,txt,md,graphql,cue}"
      ],
      "ignore": [
        "./**/node_modules/**",
        "./**/.polywrap/**",
        "./**/__tests__/**"
      ],
      "dir": "./"
    },
    "inject": {
      "dir": "./readme",
      "include": "./README.md"
    },
    "startTokens": [
      {
        "pattern": "$start: ",
        "inline": false
      },
      {
        "pattern": "/* $: {SNIPPET_NAME} */",
        "inline": true
      }
    ],
    "endTokens": [
      {
        "pattern": "$end",
        "inline": false
      },
      {
        "pattern": "/* $ */",
        "inline": true
      }
    ],
    "outputDir": "./"
  }
}
